<p id="notice"><%= notice %></p>

<h2 class="card-title d-flex justify-content-between mb-4"><span>Projects</span>
  <%= link_to 'New Project', new_project_path, class:'btn btn-primary' %></h2>

<% @projects.each do |project| %>
  <%= link_to project do %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= project.name %></h5>
      <p><%= project.description %></p>

    </div>
  </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.user.id %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


